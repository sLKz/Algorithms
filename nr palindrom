//-o fct proced pt citirea datelor
//-o fct proc pe afis elem vect]
//-o fct care return val invers unui nr


#include <iostream>
using namespace std;

void citestev(int v[],int&n)    
{int i;                             
cout<<"n= ";                    
cin>>n;                          
for(i=0;i<n;i++)                  
{cout<<"v["<<i+1<<"]= ";                  
cin>>v[i];}}                    
    
void afisarev(int v[],int n)     
{int i;                         
for(i=0;i<n;i++)                   
cout<<v[i]<<" ";                
cout<<endl;} 

int invers(int x)
{int inv=0;
while(x!=0)
{inv=inv*10+x%10;
x=x/10;}
return inv;}

int main()
{int n,v[50],i,ok=0;
citestev(v,n);
afisarev(v,n);
cout<<"val palindrom sunt: ";
for(i=0;i<n;i++)
if(v[i]==invers(v[i]))
{cout<<v[i]<<" ";
ok=1;}
if(ok==0)
cout<<"nu exista";
return 0 ; }




