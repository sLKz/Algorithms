#include <iostream>
#include <cmath>
using namespace std;

   
void citestem(int a[][20],int&n, int&m)      
{int i,j;                             
cout<<"n= ";                          
cin>>n;                               
cout<<"m= ";
cin>>m;                    
for(i=0;i<n;i++)
for(j=0;j<n;j++) 
                     
{cout<<"a["<<i+1<<"]= ";    
cin>>a[i][j];}}                                                         

     
void afisarem(int a[][20],int n, int m)       
{int i,j;
 cout<<"matr cit este"<<endl;              
for(i=0;i<n;i++)
{for(j=0;j<m;j++)
cout<<a[i][j]<<" ";
cout<<endl;}}        

int minim(int v[], int m)
{int i, minl=v[0];
for(i=1;i<m;i++)
if(v[i]<minl)
minl=v[i];
return minl;}
int main ()
{int a[20][20],n,m,i;
citestem(a,n,m);
afisarem(a,n,m);
cout<<"min de pe fiecare linie : ";
for(i=0;i<n;i++)
cout<<minim(a[i],m)<<" ";

return 0;
}
