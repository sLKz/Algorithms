#include<iostream>
#include<cmath>
using
void citestev(int v[],int&n)         
{int i;                                   
cout<<"n= ";                         
cin>>n;                                  
for(i=0;i<n;i++)                          
{cout<<"v["<<i+1<<"]= ";                           
cin>>v[i];}}                 

void afisarev(int v[],int n)
{int i;                        
for(i=0;i<n;i++)                  
cout<<v[i]<<" ";              
cout<<endl;}
int cifre_pare(int x)
while(x!=0)
{if((x%10)%2!=0)
return 0;
x=x/10;}
return 1;}
int main ()
{int n,v[50],i,ok=0;
citestev(v,n);
afisarev(v,n);
cout <<"Valorile formale numai din cifre pare";
for(i=0;i<n;i++)
if(cifre_pare(v[i]==1)
{cout<<v[i]<<" ";
ok=1;}
if(ok==0)
cout<<"nu exista ";
return 0;}
