#include <iostream>
using namespace std;
void citestem(int a[][20], int&n, int&m)
{
    int i, j;
    cout<<"Nr de linii "; cin>>n;
    cout<<"Nr de coloane "; cin>>m;
    for(i=0;i<n;i++)
    for(j=0;j<m;j++)
    {
        cout<<"a["<<i+1<<"]["<<j+1<<"]= ";
        cin>>a[i][j];
    }
}
void afisarem(int a[][20], int n, int m)
{int i, j;
cout<<"Matricea citita este "<<endl;
for(i=0;i<n;i++)
{
    for(j=0;j<m;j++)
    cout<<a[i][j]<<"  ";
    cout<<endl;}}
    int nule(int v[], int m)
    {
        int i, nr=0;
        for(i=0;i<m;i++)
        if(v[i]==0)
        nr++;
        return nr;}

int main()
{int a[20][20], n, m, k, i, ok=0;
citestem(a,n,m);
afisarem(a,n,m);
cout<<"k= ";cin>>k;
cout<<"Liniile care au "<<k<<" valori nule sunt"<<endl;
for(i=0;i<n;i++)
if(nule(a[i],m)==k)
{
    cout<<i+1<<"  ";
    ok=1;}
    if(ok==0)
    cout<<"Nu exista";
    return 0;}
